{
    "variables":{
        "packer_profile": "packer-ec2-s3",
        "applicaiton_name": "softobiz",
        "application_version": "1.0.0",
        "region": "us-south-1",
        "instance_type": "t2.micro",
        "source_ami": "ami-0851b76e8b1bce90b",
        "ami_aws_account_id": "413487075219",
        "iam_profile": "cicd-packer"

    },
    "builders": [
        {
            "name": "{{user `applicaiton_name`}}",
            "type": "amazon-ebs",
            "ssh_username": "ubuntu",
            "force_deregister": "true",
            "force_delete_snapshot": "true",
            "associate_public_ip_address": "true",
            "region": "{{user  `region`}}",
            "source_ami": "{{user `source_ami`}}",
            "instance_type":  "{{user `instance_type`}}",
            "iam_instance_profile": "{user `packer_profile`}}",
            "ami_name": "{{user `applicaiton_name`}}-{{user `application_version`}}",
            "tags": {
                "Name": "{{user `applicaiton_name`}}",
                "CreatedBy": "packer"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt update",
                "sudo apt install apache2 -y",
                "sudo apt install software-properties-common -y",
                "sudo apt install git curl wget unzip -y",
                "sudo apt-add-repository ppa:ansible/ansible",
                "sudo apt install ansible -y"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "cd /opt/",
                "git clone https://github.com/keshavkummari/keshavkummari.git",
                "cd /opt/keshavkummari/",
                "cp -pvr /opt/keshavkummari/ /var/www/html/"

            ]
        }

    ]
}